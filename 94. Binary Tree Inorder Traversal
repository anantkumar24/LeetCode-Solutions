class Solution {
public:
    vector<int> inorderTraversal(TreeNode* root) {
        vector<int>res;
        TreeNode*curr=root;
        TreeNode*pred;
        while(curr!=NULL)
        {
            if(curr->left==NULL)
            {
                res.push_back(curr->val);
                curr=curr->right;
            }
            else
            {
                pred=curr->left;
                while(pred->right!=NULL && pred->right!=curr)
                {
                    pred=pred->right;
                }
                if(pred->right==NULL)
                {
                    pred->right=curr;
                    curr=curr->left;
                }
                else
                {
                    pred->right=NULL;
                    res.push_back(curr->val);
                    curr=curr->right;
                }
            }
        }
        return res;        
    }
};
