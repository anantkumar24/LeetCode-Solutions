class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
       int i=0;
       int n=nums.size();
       vector<int>ans(n);
       int j=nums.size()-1;
       int k=nums.size()-1;
       while(i<=j)
       {
        int a=nums[i]*nums[i];
        int b=nums[j]*nums[j];
        if(a>b)
        {
            ans[k--]=a;
            i++;
        }
        else
        {
            ans[k--]=b;
            j--;
        }
       }
       return ans;
    }
};
